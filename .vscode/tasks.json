{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-o",
				"${fileBasenameNoExtension}",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "compile and run",
			"type": "shell",
			"command": "/bin/bash",
			"args": [
				"-c",
				"/usr/bin/clang++ -std=c++17 -stdlib=libc++ -o demo demo.cpp && ./demo < input.txt > output.txt"
			],
			"group": "build"
		},
		{
			"label": "compile and run balanced_paranthesis",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-o",
				"balanced_paranthesis",
				"balanced_paranthesis.cpp",
				"&&",
				"./balanced_paranthesis"
			],
			"group": "build"
		},
		{
			"label": "compile and run balanced_paranthesis",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-o",
				"balanced_paranthesis",
				"balanced_paranthesis.cpp",
				"&&",
				"./balanced_paranthesis"
			],
			"group": "build"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "build pattern3",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-g",
				"-o",
				"pattern3",
				"pattern3.cpp"
			],
			"group": "build"
		},
		{
			"label": "compile and run pattern7",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"-o",
				"pattern7",
				"pattern7.cpp",
				"&&",
				"./pattern7"
			],
			"group": "build"
		}
	]
}